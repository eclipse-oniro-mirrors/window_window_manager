import("//build/ohos.gni")
import("//foundation/window/window_manager/windowmanager_aafwk.gni")

config("session_manager_service_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "${window_base_path}/interfaces/kits/napi/screen_runtime/api",
    "${window_base_path}/interfaces/kits/napi/screen_runtime/napi",
  ]
}

ohos_shared_library("sessionmanagerservice_napi") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }
  sources = [
    "napi/js_session_manager_service.cpp",
    "napi/session_manager_service_module.cpp",
  ]

  configs = [
    ":session_manager_service_config",
    "${window_base_path}/resources/config/build:coverage_flags",
  ]

  deps = [
    "${window_base_path}/utils:libwmutil",
    "${window_base_path}/utils:libwmutil_base",
    "${window_base_path}/window_scene/session_manager_service:session_manager_service",
  ]

  external_deps = [
    "ability_runtime:runtime",
    "c_utils:utils",
    "graphic_surface:surface",  # use for SurfaceUtils
    "hilog:libhilog",
    "ipc:ipc_napi",
    "napi:ace_napi",
  ]

  relative_install_dir = "module"

  part_name = "window_manager"
  subsystem_name = "window"

  defines = []
  if (build_variant == "user") {
    defines += [ "IS_RELEASE_VERSION" ]
  }
}
